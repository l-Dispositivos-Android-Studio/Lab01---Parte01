<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <ImageView
            android:id="@+id/imagenSeleccionada"
                android:layout_width="128sp"
                android:layout_height="128sp"
                android:src="@mipmap/ig1"
                app:layout_constraintBottom_toTopOf="@+id/tableLayout"
            />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imagen6"
                android:layout_width="128sp"
                android:layout_height="128sp"
                android:src="@mipmap/ig6" />

            <ImageView
                android:id="@+id/imagen7"
                android:layout_width="128sp"
                android:layout_height="128sp"
                android:src="@mipmap/ig7" />

            <ImageView
                android:id="@+id/imagen2"
                android:layout_width="128sp"
                android:layout_height="129sp"
                android:src="@mipmap/ig2" />

            <ImageView
                android:id="@+id/imagen3"
                android:layout_width="128sp"
                android:layout_height="129sp"
                android:src="@mipmap/ig3" />

            <ImageView
                android:id="@+id/imagenChayanne"
                android:layout_width="128sp"
                android:layout_height="128sp"
                android:src="@mipmap/chayanne" />

            <ImageView
                android:id="@+id/imagen5"
                android:layout_width="128sp"
                android:layout_height="129sp"
                android:src="@mipmap/ig5" />

        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

